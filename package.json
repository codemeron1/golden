{
  "name": "golden_electron",
  "version": "1.0.0",
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron ./public/main.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5174 && npm run electron\"",
    "start": "concurrently \"npm run dev\" \"npm run electron\"",
    "dist": "npm run build && electron ./public/main.js",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "",
  "license": "ISC",
  "description": "Electron app with React, Vite, and Tailwind CSS",
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.545.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-quill": "^2.0.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "vite": "^4.5.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.golden.electron",
    "productName": "Golden Electron",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "public/main.js",
      "public/preload.js"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
