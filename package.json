{
  "name": "golden_electron",
  "version": "1.0.0",
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "concurrently -k \"npm run dev\" \"npm run start:forge\"",
    "start:forge": "electron-forge start",
    "dist": "npm run build && electron ./public/main.js",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make"
  },
  "author": "dev.rnd",
  "license": "ISC",
  "description": "Electron app with React, Vite, and Tailwind CSS",
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "date-fns": "^4.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "lucide-react": "^0.545.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-quill": "^2.0.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.0",
    "autoprefixer": "^10.4.16",
    "babel-plugin-module-resolver": "^5.0.2",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "vite": "^4.5.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.golden.electron",
    "productName": "Golden Electron",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "public/main.js",
      "public/preload.js"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
